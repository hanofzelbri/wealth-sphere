{
    "version":"0.2.0",
    "configurations":[
       {
          "type":"pwa-chrome",
          "request":"launch",
          "name":"Launch Chrome against localhost",
          "url":"http://localhost:5173",
          "webRoot":"${workspaceFolder}/wealth-sphere/src",
          "runtimeExecutable": "/usr/bin/brave-browser"
       }
    ,
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS Backend",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start:debug"
      ],
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "restart": true,
      "protocol": "inspector"
    }
    ]
 }
